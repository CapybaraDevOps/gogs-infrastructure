pipeline {
    agent { 
        label 'docker' 
    }
     tools {
		jfrog 'jfrog-cli'
        go '1.22.4'
	}
    parameters {
        choice(name: 'ENV', choices: ['dev', 'stage', 'prod'], description: 'Deployment environment')
        string(name: 'BUILDNAME', defaultValue: 'gogs', description: 'Build Name')
    }
    environment {
        GOOGLE_CREDENTIALS = credentials('terraform_creds')
    }
    stages {
        stage('Checkout') {
             steps {
                script {
                    git branch: 'jira-73-configure-gogs-helm-chart-for-multiple-environment-deployments', credentialsId: 'gitcreds', url: 'git@github.com:CapybaraDevOps/gogs-infrastructure.git'
                }
            }
        }
        stage('Compile') {
            steps {
                script {
                        dir('helm/gogs-chart/gogs-chart') {
                            env.GOGS_DB_NAME = 'gogs'
                            env.GOGS_DB_ROOT_PASS = 'testrootpass'
                            env.GOGS_DB_USER = 'gogs'
                            env.GOGS_DB_PASS = 'testpass'
                            
                            sh 'envsubst < values.yaml | tee values_temp.yaml'
                            sh 'mv values_temp.yaml values.yaml'
                            
                            sh "helm package ./ --version 1.${env.BUILD_NUMBER}.0"
                        }
                    }
                }
            }
        stage('Artifactory') {
            steps {
                script {
                    def repo = "${params.ENV}-helm-${params.BUILDNAME}"
                    jf "rt u --server-id=artifactory-docker /var/lib/jenkins/workspace/${env.JOB_NAME}/helm/gogs-chart/gogs-chart/gogsapp-1.${env.BUILD_NUMBER}.0.tgz ${repo}/gogsapp-1.${env.BUILD_NUMBER}.0.tgz"
                    jf "rt bp"
                }
            }
        }
    }
    post {
        always {
            cleanWs()
        }
    }
}